root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{html,ts,js}]
indent_style = tab
indent_size = tab
tab_size = 2
indent_size = 2


[*.cs]
indent_style = tab
indent_size = tab
tab_size = 4
indent_size = 4

[*.json]
indent_style = space
indent_size = space
indent_size = 2
indent_size = 2
